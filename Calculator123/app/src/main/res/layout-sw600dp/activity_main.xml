<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="govno.example.calculator123.MainActivity"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        />
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="35sp"
        android:singleLine="true"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/AC_per_pls_buttons"
            android:background="@drawable/shaping2"
            android:text="AC"
            tools:ignore="HardcodedText">

        </TextView>

        <TextView
            style="@style/AC_per_pls_buttons"
            android:background="@drawable/shaping2"
            android:text="+/-"
            tools:ignore="HardcodedText">

        </TextView>

        <TextView
            style="@style/AC_per_pls_buttons"
            android:background="@drawable/shaping2"
            android:text="%"
            tools:ignore="HardcodedText">

        </TextView>

        <TextView
            style="@style/op_Button"
            android:background="@drawable/shaping"
            android:text="Back"
            tools:ignore="HardcodedText">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView
            style="@style/digit_Button"
            android:text="7"
            tools:ignore="HardcodedText"
            android:background="@drawable/shaping3">

        </TextView><TextView
        style="@style/digit_Button"
        android:text="8"
        tools:ignore="HardcodedText"
        android:background="@drawable/shaping3">

    </TextView><TextView
        style="@style/digit_Button"
        android:text="9"
        tools:ignore="HardcodedText"
        android:background="@drawable/shaping3">

    </TextView>
        <TextView
            style="@style/op_Button"
            android:text="x"
            tools:ignore="HardcodedText"
            android:background="@drawable/shaping">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView
            style="@style/digit_Button"
            android:text="4"
            tools:ignore="HardcodedText"
            android:background="@drawable/shaping3"
            >

        </TextView><TextView
        style="@style/digit_Button"
        android:text="5"
        tools:ignore="HardcodedText"
        android:background="@drawable/shaping3">

    </TextView><TextView
        style="@style/digit_Button"
        android:text="6"
        tools:ignore="HardcodedText"
        android:background="@drawable/shaping3">

    </TextView>
        <TextView
            style="@style/op_Button"
            android:text="-"
            tools:ignore="HardcodedText"
            android:background="@drawable/shaping">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView
            style="@style/digit_Button"
            android:text="1"
            tools:ignore="HardcodedText"
            android:background="@drawable/shaping3">

        </TextView><TextView
        style="@style/digit_Button"
        android:text="2"
        tools:ignore="HardcodedText"
        android:background="@drawable/shaping3">

    </TextView><TextView
        style="@style/digit_Button"
        android:text="3"
        tools:ignore="HardcodedText"
        android:background="@drawable/shaping3">

    </TextView>
        <TextView
            style="@style/op_Button"
            android:text="+"
            tools:ignore="HardcodedText"
            android:background="@drawable/shaping">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">

        <TextView
            style="@style/digit_Button"
            android:layout_width="126dp"
            android:text="0"
            tools:ignore="HardcodedText"
            android:background="@drawable/shaping3">

        </TextView>

        <TextView
        style="@style/digit_Button"
        android:text=","
        tools:ignore="HardcodedText"
            android:background="@drawable/shaping3">

    </TextView>
        <TextView
            style="@style/op_Button"
            android:text="/"
            tools:ignore="HardcodedText"
            android:background="@drawable/shaping">

    </TextView>

    </LinearLayout>

</LinearLayout>